{
  "name": "grovebook-editor",
  "displayName": "Grovebook Editor",
  "description": "",
  "version": "2.0.0",
  "publisher": "kineviz",
  "repository": "https://github.com/kineviz/grovebook-editor",
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri",
    "workspaceContains:*"
  ],
  "main": "./extension.js",
  "icon": "icon.png",
  "contributes": {
    "configuration": {
      "title": "Grovebook Editor",
      "properties": {
        "grovebook.apiKeys": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "description": "(Deprecated) API keys are now stored securely. Existing keys will be migrated automatically.",
          "scope": "resource"
        },
        "grovebook.enableTracing": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging to the Grovebook Hot Reload output channel"
        },
        "grovebook.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync changes to remote server after a short delay (1.5s)"
        }
      }
    },
    "commands": [
      {
        "command": "grovebook.setApiKey",
        "title": "Grovebook: Set API Key"
      },
      {
        "command": "grovebook.deleteApiKey",
        "title": "Grovebook: Delete API Key"
      },
      {
        "command": "grovebook.listApiKeys",
        "title": "Grovebook: List API Keys"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}
